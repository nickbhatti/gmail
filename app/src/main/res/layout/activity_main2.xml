<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.divyansh.gmail.Main2Activity">

    <android.support.v7.widget.CardView
        android:layout_width="372dp"
        android:layout_height="497dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/cardview_light_background"
                    android:backgroundTint="@color/cardview_shadow_start_color"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="#d34836"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/imageButton5"
                            android:layout_width="66dp"
                            android:layout_height="match_parent"
                            android:backgroundTint="#d34836"
                            android:onClick="mainClick"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/drawable10" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.66"
                            android:background="#d34836"
                            android:padding="19dp"
                            android:paddingBottom="10dp"
                            android:paddingEnd="5dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="10dp"
                            android:paddingStart="6dp"
                            android:paddingTop="6dp"
                            android:text="Settings"

                            android:textColor="@android:color/background_light"
                            android:textSize="21sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/imageButton6"
                            android:layout_width="59dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.11"
                            android:backgroundTint="#d34836"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/drawable11" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="0dp"
                        android:background="@color/cardview_light_background"
                        android:orientation="vertical"
                        android:paddingTop="0dp">

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:paddingBottom="0dp"
                            android:paddingEnd="0dp"
                            android:paddingLeft="0dp"
                            android:paddingRight="0dp"
                            android:paddingStart="5dp"
                            android:paddingTop="0dp"
                            android:text="Inbox type"

                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingStart="5dp"
                            android:text="Default inbox"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/background_light"
                        android:orientation="horizontal"
                        android:padding="0dp">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_weight="1.74"

                            android:paddingStart="5dp"

                            android:paddingTop="15dp"
                            android:text="Notifications"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/checkBox2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.46"
                            android:checked="true"
                            android:duplicateParentState="false"
                            app:buttonTint="@android:color/holo_blue_dark" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/background_light"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:paddingBottom="0dp"
                            android:paddingEnd="0dp"
                            android:paddingLeft="0dp"
                            android:paddingRight="0dp"
                            android:paddingStart="5dp"
                            android:paddingTop="5dp"
                            android:text="Inbox Sound and Vibrate"

                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="0dp"

                            android:paddingStart="5dp"
                            android:text="Sound on, notify once"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/background_light"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:paddingBottom="0dp"
                            android:paddingEnd="0dp"
                            android:paddingLeft="0dp"
                            android:paddingRight="0dp"
                            android:paddingStart="5dp"
                            android:paddingTop="0dp"
                            android:text="Signature"

                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="0dp"

                            android:paddingStart="5dp"
                            android:text="Not Set"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/background_light"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:text="Out of Office Auto Reply"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="Off" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"

                            android:paddingStart="5dp"
                            android:text="Data Usage"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView17"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="5.55"
                                android:paddingStart="5dp"
                                android:text="Sync Gmail"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <CheckBox
                                android:id="@+id/checkBox"
                                style="@android:style/Widget.DeviceDefault.Light.CompoundButton.CheckBox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:checked="true"
                                android:textColor="@android:color/holo_blue_dark"
                                app:buttonTint="@android:color/holo_blue_dark" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/background_light"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:paddingBottom="0dp"
                            android:paddingEnd="0dp"
                            android:paddingLeft="0dp"
                            android:paddingRight="0dp"
                            android:paddingStart="5dp"
                            android:paddingTop="0dp"
                            android:text="Days of emails to sync"

                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="0dp"
                            android:paddingLeft="5dp"
                            android:paddingStart="5dp"
                            android:text="30 days"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/background_light"
                        android:orientation="vertical"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="0dp">

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingBottom="0dp"
                            android:paddingEnd="0dp"
                            android:paddingLeft="0dp"
                            android:paddingRight="0dp"
                            android:paddingStart="5dp"
                            android:paddingTop="13dp"

                            android:text="Manage Labels"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/background_light"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="291dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.63"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView18"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:text="Download Attachments"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView19"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:text="Auto-download attachments to recent "
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/textView20"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="5dp"
                                android:text="messages via WiFi"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <CheckBox
                            android:id="@+id/checkBox3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.57"
                            android:checked="true"
                            android:paddingStart="13dp"
                            android:paddingTop="20dp"
                            app:buttonTint="@android:color/holo_blue_dark" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="1dp"
                        android:background="@android:color/background_light"
                        android:orientation="vertical"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="0dp">

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:paddingBottom="0dp"
                            android:paddingEnd="0dp"
                            android:paddingLeft="0dp"
                            android:paddingRight="0dp"
                            android:paddingStart="5dp"
                            android:paddingTop="0dp"
                            android:text="Images"

                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView23"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="0dp"
                            android:paddingEnd="5dp"
                            android:paddingStart="5dp"
                            android:text="Always Show"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
