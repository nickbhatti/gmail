<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.divyansh.gmail.Main3Activity">

    <android.support.v7.widget.CardView
        android:layout_width="399dp"
        android:layout_height="556dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="472dp"
            android:background="@color/cardview_shadow_start_color"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/cardview_light_background"
                android:backgroundTint="@color/cardview_light_background"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageButton
                    android:id="@+id/imageButton7"
                    android:layout_width="77dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:background="@color/cardview_light_background"
                    android:padding="15dp"
                    android:paddingTop="10dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/drawable18" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:text="Set up email "
                android:textSize="25sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="1dp"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton8"
                    android:layout_width="74dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/cardview_light_background"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/drawable13" />

                <TextView
                    android:id="@+id/textView39"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:paddingTop="13dp"
                    android:text="Google"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_marginTop="1dp"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton9"
                    android:layout_width="74dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/cardview_light_background"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/drawable14" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="15dp"
                    android:text="Outlook,Hotmail and Live"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton10"
                    android:layout_width="74dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/cardview_light_background"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/drawable15" />

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="15dp"
                    android:text="Yahoo"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_marginTop="1dp"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton11"
                    android:layout_width="74dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/cardview_light_background"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/drawable16" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="15dp"
                    android:text="Exchange and Office 365"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton12"
                    android:layout_width="74dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/cardview_light_background"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/drawable17" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="15dp"
                    android:text="Other"
                    android:textSize="22sp" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
