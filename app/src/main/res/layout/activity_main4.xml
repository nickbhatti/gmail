<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.divyansh.gmail.Main4Activity">

    <android.support.v7.widget.CardView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_shadow_start_color"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:background="#e53935"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButton13"
                        android:layout_width="58dp"
                        android:layout_height="60dp"
                        android:backgroundTint="#d34836"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/drawable10" />

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="wrap_content"
                        android:layout_height="62dp"
                        android:layout_weight="1"
                        android:backgroundTint="#d34836"
                        android:paddingStart="5dp"
                        android:paddingTop="20dp"
                        android:text="Compose"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/imageButton14"
                        android:layout_width="64dp"
                        android:layout_height="61dp"
                        android:backgroundTint="#d34836"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/drawable20" />

                    <ImageButton
                        android:id="@+id/imageButton15"
                        android:layout_width="60dp"
                        android:layout_height="63dp"
                        android:backgroundTint="#d34836"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/drawable22" />

                    <ImageButton
                        android:id="@+id/imageButton16"
                        android:layout_width="43dp"
                        android:layout_height="64dp"
                        android:layout_weight="0.37"
                        android:backgroundTint="#d34836"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/drawable11" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@color/cardview_light_background"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.03"
                        android:paddingTop="8dp"
                        android:text="From"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/textView31"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.11"
                        android:fontFamily="sans-serif"
                        android:paddingTop="8dp"
                        android:text="dishu4smart@gmail.com"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/cardview_light_background"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.96"
                        android:paddingTop="10dp"
                        android:text="To"
                        android:textSize="19sp" />

                    <ImageButton
                        android:id="@+id/imageButton17"
                        android:layout_width="37dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.08"
                        android:backgroundTint="@color/cardview_light_background"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/drawable21" />

                </LinearLayout>

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="59.50"
                    android:background="@color/cardview_light_background"
                    android:ems="10"
                    android:inputType="textEmailSubject"
                    android:selectAllOnFocus="false"
                    android:singleLine="false"
                    android:text="Subject" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="match_parent"
                    android:layout_height="307dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/cardview_light_background"
                    android:ems="10"
                    android:inputType="text"
                    android:paddingBottom="270dp"
                    android:text="Compose email "
                    android:textSize="19sp" />

            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
